{{#if resume.work.length}}
<section>
	<h2>Berufserfahrung</h2>
	{{#each resume.work}}
	<div>
		<span class="headline">
			{{#if website}}
			<a target="_blank" rel="noopener" href="{{website}}">{{company}}</a>
			{{else}}
			{{company}}
			{{/if}}
		</span>
		<p class="grey">
			{{#if position}}
			{{position}} |
			{{/if}}
			{{#if startDate}}
			{{formatDate startDate month="short" year="numeric"}}

			{{/if}}
			{{#if endDate}}
			- {{formatDate endDate month="short" year="numeric"}}
			{{else}}
			- heute
			{{/if}}
		</p>
		{{#if summary}}
		<div class="summary">
			<p>{{summary}}</p>
		</div>
		{{/if}}
		{{#if highlights.length}}
		<ul class="highlights">
			{{#each highlights}}
			<li>{{.}}</li>
			{{/each}}
		</ul>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}
