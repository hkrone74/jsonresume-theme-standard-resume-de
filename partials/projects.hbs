{{#if resume.publications.length}}
<section>
	<h2>Projekte</h2>
	{{#each resume.publications}}
	<span class="headline">
		{{#if website}}
		<a target="_blank" rel="noopener" href="{{website}}">{{name}}</a>
		{{else}}
		{{name}}
		{{/if}}
	</span>
	{{#if releaseDate}}
	<p class="grey">
		{{formatDate releaseDate month="short" year="numeric"}}
	</p>
	{{/if}}
	{{#if summary}}
	<p>{{summary}}</p>
	{{/if}}
	{{/each}}
</section>
{{/if}}
